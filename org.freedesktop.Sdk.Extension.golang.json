{
  "id": "org.freedesktop.Sdk.Extension.golang",
  "branch": "1.6",
  "runtime": "org.freedesktop.Sdk",
  "build-extension": true,
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "1.6",
  "sdk-extensions": [],
  "separate-locales": false,
  "appstream-compose": false,
  "modules": [
    {
      "name": "golang",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "archive",
          "only-arches": [
            "i386"
          ],
          "url": "https://dl.google.com/go/go1.11.5.linux-386.tar.gz",
          "sha256": "acd8e05f8d3eed406e09bb58eab89de3f0a139d4aef15f74adeed2d2c24cb440"
        },
        {
          "type": "archive",
          "only-arches": [
            "arm"
          ],
          "url": "https://dl.google.com/go/go1.11.5.linux-armv6l.tar.gz",
          "sha256": "b26b53c94923f78955236386fee0725ef4e76b6cb47e0df0ed0c0c4724e7b198"
        },
        {
          "type": "archive",
          "only-arches": [
            "aarch64"
          ],
          "url": "https://dl.google.com/go/go1.11.5.linux-arm64.tar.gz",
          "sha256": "6ee9a5714444182a236d3cc4636e74cfc5e24a1bacf0463ac71dcf0e7d4288ed"
        },
        {
          "type": "archive",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://dl.google.com/go/go1.11.5.linux-amd64.tar.gz",
          "sha256": "ff54aafedff961eb94792487e827515da683d61a5f9482f668008832631e5d25"
        }
      ],
      "build-commands": [
        "install -d /usr/lib/sdk/golang",
        "cp -rpv * /usr/lib/sdk/golang/"
      ]
    },
    {
      "name": "scripts",
      "sources": [
        {
          "type": "script",
          "commands": [
            "export GOROOT=/usr/lib/sdk/golang",
            "export PATH=$PATH:$GOROOT/bin"
          ],
          "dest-filename": "enable.sh"
        }
      ],
      "buildsystem": "simple",
      "build-commands": [
        "cp enable.sh /usr/lib/sdk/golang/"
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.freedesktop.Sdk.Extension.golang.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose  --basename=org.freedesktop.Sdk.Extension.golang --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.golang"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.freedesktop.Sdk.Extension.golang.appdata.xml"
        }
      ]
    }
  ]
}
