{
  "id": "org.freedesktop.Sdk.Extension.golang",
  "branch": "18.08",
  "runtime": "org.freedesktop.Sdk",
  "build-extension": true,
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "18.08",
  "sdk-extensions": [],
  "separate-locales": false,
  "appstream-compose": false,
  "modules": [
    {
      "name": "golang",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "archive",
          "only-arches": [
            "i386"
          ],
          "url": "https://dl.google.com/go/go1.12.5.linux-386.tar.gz",
          "sha256": "146605e13bf337ff3aacd941a816c5d97a8fef8b5817e07fcec4540632085980"
        },
        {
          "type": "archive",
          "only-arches": [
            "arm"
          ],
          "url": "https://dl.google.com/go/go1.12.5.linux-armv6l.tar.gz",
          "sha256": "311f5e76c7cec1ec752474a61d837e474b8e750b8e3eed267911ab57c0e5da9a"
        },
        {
          "type": "archive",
          "only-arches": [
            "aarch64"
          ],
          "url": "https://dl.google.com/go/go1.12.5.linux-arm64.tar.gz",
          "sha256": "ff09f34935cd189a4912f3f308ec83e4683c309304144eae9cf60ebc552e7cd8"
        },
        {
          "type": "archive",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://dl.google.com/go/go1.12.5.windows-amd64.zip",
          "sha256": "aea86e3c73495f205929cfebba0d63f1382c8ac59be081b6351681415f4063cf"
        }
      ],
      "build-commands": [
        "install -d /usr/lib/sdk/golang",
        "cp -rpv * /usr/lib/sdk/golang/"
      ]
    },
    {
      "name": "scripts",
      "sources": [
        {
          "type": "script",
          "commands": [
            "export GOROOT=/usr/lib/sdk/golang",
            "export PATH=$PATH:$GOROOT/bin"
          ],
          "dest-filename": "enable.sh"
        }
      ],
      "buildsystem": "simple",
      "build-commands": [
        "cp enable.sh /usr/lib/sdk/golang/"
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.freedesktop.Sdk.Extension.golang.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose  --basename=org.freedesktop.Sdk.Extension.golang --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.golang"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.freedesktop.Sdk.Extension.golang.appdata.xml"
        }
      ]
    }
  ]
}
